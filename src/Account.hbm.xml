<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
 <hibernate-mapping>
 
 	<class name="com.josh.web.bank.Account" table="ACCOUNTS">
 	
 		<meta attribute="description">
 			This class contains account information.
 		</meta>
 		<id name="id" type="int" column="id">
 			<generator class="native" />
 		</id>
 		<properties name="username" unique="true">
 			<property name="username" column="USERNAME" type="string" />
 		</properties>
 		<property name="password" column="PASSWORD" type="string" />
 		<property name="balance" column="BALANCE" type="double" />
 		<property name="dateCreated" column="DATE" type="date" />
 		
 	
 	</class>
 
 </hibernate-mapping>